<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Encabezado de la tabla -->
        <TableRow>
            <TextView
                android:id="@+id/textViewHeader1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Columna 1"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewHeader2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Columna 2"
                android:padding="8dp"
                android:gravity="center" />

            <!-- Agrega más TextView para más columnas según sea necesario -->
        </TableRow>

        <!-- Agrega más TableRow para más filas según sea necesario -->

    </TableLayout>

</ScrollView>
