<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/Count_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Count_bt"
            android:textColor="#000000"
            android:background="@color/design_default_color_secondary_variant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Toast_bt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/Toast_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/toast_bt"
            android:textColor="#000000"
            android:background="@color/design_default_color_secondary_variant"
            app:layout_constraintStart_toEndOf="@+id/Count_bt"
            app:layout_constraintEnd_toStartOf="@+id/Random_bt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/Random_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/random_bt"
            android:textColor="#000000"
            android:background="@color/design_default_color_secondary_variant"
            app:layout_constraintStart_toEndOf="@+id/Toast_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/textview_first0"
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="text"
            android:text="0"
            app:layout_constraintBottom_toTopOf="@+id/Count_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
